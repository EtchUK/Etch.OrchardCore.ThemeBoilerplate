<form class="form" action="#" method="POST" style="max-width: 60%;">
    <div class="form-group">

        <div class="form-group">
            <label class="label" for="email-address">
                Email address<span class="required">*</span>
            </label>
            <input class="input" id="email-address" name="email-address" type="text">
        </div>

        <div class="form-group">
            <label class="label" for="password">
                Password<span class="required">*</span>
            </label>
            <input class="input" id="password" name="password" type="password">
        </div>

        <button id="SignUp" name="SignUp" type="submit" class="btn btn--primary" disabled>Login</button>

    </div>
</form>