<form class="form" action="#" method="POST" style="max-width: 60%;">
    <div class="form-group">

        <div class="form-group">
            <label class="label" for="your-name">
                Your name<span class="required">*</span>
            </label>
            <input class="input" id="your-name" name="your-name" type="text">
        </div>

        <div class="form-group">
            <label class="label" for="email-address">
                Email address<span class="required">*</span>
            </label>
            <input class="input" id="email-address" name="email-address" type="text">
        </div>

        <div class="form-group">
            <label class="label" for="password">
                Password<span class="required">*</span>
            </label>
            <span id="password-hint" class="hint">
                Passwords must be at least 6 characters long.
            </span>
            <input class="input" id="password" name="password" type="text" aria-describedby="password-hint">
        </div>

        <div class="form-group">
            <label class="label" for="password-confirm">
                Confirm password<span class="required">*</span>
            </label>
            <input class="input" id="password-confirm" name="password-confirm" type="text">
        </div>

        <button id="SignUp" name="SignUp" type="submit" class="btn btn--primary" disabled>Login</button>
        
    </div>
</form>