<!DOCTYPE html>
<html class="theme-default" lang="@Orchard.CultureName()">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>@RenderTitleSegments(Site.SiteName)</title>

        <resources type="Meta" />
        <resources type="HeadLink" />
        <resources type="Stylesheet" />
        <resources type="HeadScript" />

        <script>
            // Picture element HTML5 shiv
            document.createElement( "picture" );
        </script>

        <link rel="stylesheet" href="/Etch.OrchardCore.ThemeBoilerplate/css/style.css">
        <script src="/Etch.OrchardCore.ThemeBoilerplate/js/scripts.js" async></script>

        @await RenderSectionAsync("Header", required: false)
    </head>
    <body>
        @await RenderSectionAsync("Header", required: false)
        @await RenderBodyAsync()
        @await RenderSectionAsync("Footer", required: false)

        <resources type="FootScript" />
    </body>
</html>
