@using OrchardCore.Themes.Services

@model OrchardCore.Users.ViewModels.ForgotPasswordViewModel

@inject ISiteThemeService SiteThemeService

@{
    var currentThemeName = await SiteThemeService.GetCurrentThemeNameAsync();
}

<section class="hero hero--desktop-ratio-100vh hero--tablet-ratio-100vh hero--mobile-ratio-100vh hero--horizontal-center hero--vertical-center hero--contains-users-form">
    <div class="hero__body constrain constrain--extra-thin">
        <form asp-controller="ResetPassword" asp-action="ForgotPassword" method="post" class="form form--users-form">
            <h1 class="text--h3">@T["Forgot password?"]</h1>
            <p>@T["Please check your email to reset your password."]</p>

            <div asp-validation-summary="All" class="text--error"></div>

            <div class="form-group">
                <label asp-for="Email">@T["Email"]</label>
                <input asp-for="Email" autofocus tabindex="1" class="input" />
            </div>

            @await RenderSectionAsync("AfterForgotPassword", required: false)
            
            <button type="submit" class="btn btn-primary" tabindex="2">@T["Submit"]</button>
        </form>
    </div>
    <div class="hero__space"></div>
</section>
