{
    "private": true,
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "npm i --no-audit && vite build",
        "develop": "vite",
        "install-git-hooks": "cd .. && husky install",
        "lint": "lint-staged",
        "prepare": "npm run install-git-hooks",
        "start": "npm i && npm run develop"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "sass": "^1.63.6",
        "sass-mq": "^6.0.0",
        "stylelint": "^15.2.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-recommended-scss": "^12.0.0",
        "vite": "^4.1.4",
        "vite-plugin-mkcert": "^1.13.3"
    },
    "dependencies": {
        "lg-video.js": "^1.3.0",
        "lightgallery.js": "^1.4.0",
        "normalize.css": "^8.0.1",
        "rellax": "^1.10.0"
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            "eslint --quiet --fix"
        ],
        "*.scss": [
            "stylelint --quiet --fix"
        ],
        "*.{scss,json,md,html,js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "> 0.5%",
        "Firefox ESR",
        "last 2 versions",
        "not dead"
    ],
    "prettier": {
        "editorconfig": true
    }
}
